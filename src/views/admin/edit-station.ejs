<%- include('../partials/head.ejs', {title: title}) %>

<%- include('../partials/header.ejs') %>

<%- include('../partials/sidebar.ejs') %>
<div class="main-content">
  <div class="page-content">
    <div class="container-fluid">

      <%- include('../partials/breadcrumbs.ejs', {title: title}) %>

      <div class="row">
        <div class="col-lg-4">
          <div class="card border border-warning card-body">
            <h3 class="card-title mb-2">Edit Fuel Station Details</h3>
            <form id="fuel_stationsform" action="/admin/fuel-stations/edit/<%=station.id%>" method="post">
              <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" 
                placeholder="Enter Your Fuel Station Name" value="<%=station.name ? station.name : '' %>" required>
              </div>

              <div class="mb-3">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" name="address" 
                placeholder="Fuel Station Address" value="<%=station.address ? station.address : '' %>" required>
              </div>

              <div class="mb-3">
                <label for="district_id">District</label>
                <select name="district_id" id="district_id" class="form-select" 
                data-selected="<%=station.districtId ? station.districtId : '' %>"></select>
              </div>

              <div class="mb-3">
                <label for="contact_person" class="form-label">Contact Person
                  Name</label>
                <input type="text" class="form-control" id="contact_person" name="contact_person" 
                placeholder="Contact Person Name" value="<%=station.contactPerson ? station.contactPerson : '' %>">
              </div>

              <div class="mb-3">
                <label for="email_address" class="form-label">Email</label>
                <input type="email" class="form-control" id="email_address" name="email_address" 
                placeholder="Enter Your Email" value="<%=station.email ? station.email : '' %>">
              </div>
     
              <div class="mb-3">
                <label for="duration_per_vehicle" class="form-label">Duration per vehicle (minutes)</label>
                <div class="input-group mb-3">
                  <input type="number" class="form-control" id="duration_per_vehicle" name="duration_per_vehicle" min="1" step="1"
                  placeholder="Enter Duration per vehicle"value="<%=station.durationPerVerhicle ? station.durationPerVerhicle : '' %>">
                  <span class="input-group-text" id="basic-addon2">minutes</span>
                </div>
              </div>

              <div class="mb-3">
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox" role="switch" id="couldNotDistribute" name="couldNotDistribute" checked value="1">
                  <label class="form-check-label" for="couldNotDistribute">Could not distribute</label>
                </div>
              </div>

              <div class="mb-3">
                <button type="submit" class="btn btn-warning">Submit</button>
              </div>
            </form>
          </div>
        </div>

        <div class="col-lg-8">
          <div class="card card-body">
            <div class="table-responsive">
              <table class="table table-bordered table-striped table-hover" id="fuel-stations-table">
                <colgroup>
                  <col style="width: 20%;">
                  <col style="width: 25%;">
                  <col style="width: 20%;">
                  <col style="width: 20%;">
                  <col style="width: 15%;">
                </colgroup>
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Address</th>
                    <th>District</th>
                    <th>Duration<br /><small>(Minutes)</small></th>
                    <th>Contact Details</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td colspan="5" class="text-center">No fuel stations added yet.</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer.ejs') %>

<%- include('../partials/foot.ejs', {scripts: ['fuel_stations']}) %>