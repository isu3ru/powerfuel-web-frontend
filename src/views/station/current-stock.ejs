<%- include('../partials/head.ejs', {title: title}) %>

<%- include('../partials/header.ejs') %>

<%- include('../partials/sidebar.ejs') %>
<div class="main-content"  ng-app="stationApp" ng-controller="stationCtrl" ng-init="getStoks()">
    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Fuel Station Current Stock</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Power Fule</a></li>
                                <li class="breadcrumb-item active">Fuel Station Current Stock view</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>
            <!-- end page title -->
            <div class="row" style="margin-bottom: 20px;">
                <div class="col col-2" style=" margin-right: 20px;">
                     <span  style="border-radius: 10px; display:block; text-align: center; margin-right: 5px; background-color: aquamarine; padding: 5px 10px 5px 10px;"  >Stock Available</span> 
                </div>
                <div class="col col-2"  style=" margin-right: 20px;">
                     <span  style="border-radius: 10px; display:block;  text-align: center;  margin-right: 5px; background-color: #FED166; padding: 5px 10px 5px 10px;" >Stocks Less than Re Order Level</span> 
                 </div>
                 <div class="col col-2"  style=" margin-right: 20px;">
                     <span  style="border-radius: 10px;display:block;   text-align: center;  margin-right: 5px; background-color: #FEB7A2; padding: 5px 10px 5px 10px;" >Stocks Not Available</span> 
                 </div>
                
                 <div class="col col-1"  style=" margin-right: 20px;">
   
                 </div>
                
                 <div class="col col-1"  style=" margin-right: 20px;">
   
                 </div>
                
 
             </div>
             <div class="row">
                 <div class="col col-10" >
                    
                 </div>
                 <div class="col col-2"  >
                     <input type="text" ng-model="searchText" class="form-control" placeholder="Search Stocks" />
                 </div>
             </div>
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">


                            <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
                                <thead>
                                <tr>                               
                                    <th>Fuel Station</th>
                                    <th>Fuel Type</th>
                                    <th>Re Order Level</th>
                                    <th>Current Stock</th>
                                </tr>
                                </thead>


                                <tbody>
                                <tr ng-repeat="s in stocks | filter: searchText" style="background-color: aquamarine;"
                                ng-style="(s.qty == 0 && {'background-color':'#FEB7A2'}) || s.fuelType.rolOfStation > s.qty && {'background-color':'#FED166'}"
                           
                                >
                                    <td>{{ s.fuelStation.district.name }} {{ s.fuelStation.name }}</td>
                                    <td>{{ s.fuelType.name }}</td>
                                    <td>{{ s.fuelType.rolOfStation }}</td>
                                    <td>{{ s.qty }}</td>
                            
                       

                                </tr>


                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../partials/footer.ejs') %>

<%- include('../partials/foot.ejs', {scripts: ['fuel_stations']}) %>